    @Name : SGA_VFP06_InProgressOmniApp
    @Description : 1)  VF page to Display related In Progress App for an Account 
                   2)  Used to embedd Lightning Component SGA_LTNG07_OmpniInProgressApplications for Classic view
                   3) In Classic View Lightning Components are not supported ,So this Page is created 
                      to support the existing component in Salesforce Classic UI.
-->
<apex:page standardController="Account" extensions="SGA_LTNG04_InProgressController">
 <apex:includeLightning />

 <div id="InProgressAppsContainer" />

 <script>
   
   var accountId="{!acct.Id}"; 
        console.log(accountId);
    //alert('id got'+accountId);
  
 $Lightning.use("c:SGA_LTNG06_OmpniInProgressApplicationsApp", function() {
 $Lightning.createComponent("c:SGA_LTNG07_OmpniInProgressApplications",
                             { "recordId" : accountId,
                             "accId" : accountId},

 "InProgressAppsContainer",
 function(cmp) {
 console.log('Component created for SGA_LTNG07_OmpniInProgressApplications');
 });
 });
 </script>
</apex:page>